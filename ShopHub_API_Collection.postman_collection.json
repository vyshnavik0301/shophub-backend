					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/payments/mock",
							"host": ["{{baseUrl}}"],
							"path": ["api", "payments", "mock"]
						},
						"description": "Mock payment endpoint. Always returns success."
					}
				}
			]
		}
