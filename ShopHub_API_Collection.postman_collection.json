							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/orders/{{orderId}}/status",
							"host": ["{{baseUrl}}"],
							"path": ["api", "orders", "{{orderId}}", "status"]
						}
					}
				}
			],
			"description": "Order endpoints - User ID extracted from JWT token"
		},
		{
			"name": "Payments",
			"item": [
