{
	"info": {
		"_postman_id": "shophub-api-collection",
		"name": "ShopHub API - Updated Routes (JWT Auth)",
		"description": "Complete API collection for ShopHub with JWT authentication. User ID is extracted from JWT token, not from URL path.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"userId\", jsonData.userId);",
									"    console.log(\"User ID saved:\", jsonData.userId);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"secret123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/register",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "register"]
						},
						"description": "Register a new user. Save the userId from response."
					}
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"jwtToken\", jsonData.token);",
									"    pm.collectionVariables.set(\"userId\", jsonData.user.userId);",
									"    console.log(\"JWT Token saved\");",
									"    console.log(\"User ID saved:\", jsonData.user.userId);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"secret123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "login"]
						},
						"description": "Login and get JWT token. Token is automatically saved to collection variable."
					}
				},
				{
					"name": "Get Current User (Me)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwtToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/auth/me",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "me"]
						},
						"description": "Get current authenticated user from JWT token."
					}
				}
			],
			"description": "Authentication endpoints"
		},
		{
			"name": "Users",
			"item": [
				{
					"name": "Get User by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwtToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/users/{{userId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users", "{{userId}}"]
						}
					}
				}
			]
		},
		{
			"name": "Products",
			"item": [
				{
					"name": "Get All Products",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/products",
							"host": ["{{baseUrl}}"],
							"path": ["api", "products"]
						}
					}
				},
				{
					"name": "Get Product by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/products/{{productId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "products", "{{productId}}"]
						}
					}
				},
				{
					"name": "Create Product",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"productId\", jsonData.productId);",
									"    console.log(\"Product ID saved:\", jsonData.productId);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Wireless Mouse\",\n  \"description\": \"Ergonomic wireless mouse\",\n  \"price\": 29.99,\n  \"imageUrl\": \"https://example.com/mouse.jpg\",\n  \"category\": {\n    \"categoryId\": \"11111111-1111-1111-1111-111111111111\"\n  }\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/products",
							"host": ["{{baseUrl}}"],
							"path": ["api", "products"]
						},
						"description": "Create a new product. Use categoryId from data.sql seed data."
					}
				}
			]
		},
		{
			"name": "Catalog",
			"item": [
				{
					"name": "Get All Catalog Items",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/catalog",
							"host": ["{{baseUrl}}"],
							"path": ["api", "catalog"]
						}
					}
				},
				{
					"name": "Search Catalog",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/catalog/search?query=mouse",
							"host": ["{{baseUrl}}"],
							"path": ["api", "catalog", "search"],
							"query": [
								{
									"key": "query",
									"value": "mouse"
								}
							]
						}
					}
				},
				{
					"name": "Filter Catalog",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/catalog/filter?category=Electronics&minPrice=0&maxPrice=100",
							"host": ["{{baseUrl}}"],
							"path": ["api", "catalog", "filter"],
							"query": [
								{
									"key": "category",
									"value": "Electronics"
								},
								{
									"key": "minPrice",
									"value": "0"
								},
								{
									"key": "maxPrice",
									"value": "100"
								}
							]
						}
					}
				},
				{
					"name": "Get Catalog Item by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/catalog/{{productId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "catalog", "{{productId}}"]
						}
					}
				}
			]
		},
		{
			"name": "Cart",
			"item": [
				{
					"name": "Get Cart",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwtToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/cart",
							"host": ["{{baseUrl}}"],
							"path": ["api", "cart"]
						},
						"description": "Get current user's cart. User ID is extracted from JWT token automatically."
					}
				},
				{
					"name": "Add Item to Cart",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"cartItemId\", jsonData.cartItemId || jsonData.cart_item_id);",
									"    console.log(\"Cart Item ID saved:\", jsonData.cartItemId || jsonData.cart_item_id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwtToken}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"productId\": \"{{productId}}\",\n  \"quantity\": 2\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/cart/items",
							"host": ["{{baseUrl}}"],
							"path": ["api", "cart", "items"]
						},
						"description": "Add item to cart. User ID is extracted from JWT token automatically."
					}
				},
				{
					"name": "Update Cart Item",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwtToken}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"quantity\": 3\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/cart/items/{{cartItemId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "cart", "items", "{{cartItemId}}"]
						},
						"description": "Update cart item quantity. Set quantity to 0 to remove item."
					}
				},
				{
					"name": "Remove Cart Item",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwtToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/cart/items/{{cartItemId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "cart", "items", "{{cartItemId}}"]
						},
						"description": "Remove item from cart. User ID is extracted from JWT token automatically."
					}
				}
			],
			"description": "Cart endpoints - User ID extracted from JWT token"
		},
		{
			"name": "Checkout",
			"item": [
				{
					"name": "Checkout",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"orderId\", jsonData.orderId);",
									"    console.log(\"Order ID saved:\", jsonData.orderId);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwtToken}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"shippingAddress\": \"123 Main St, City, 12345\",\n  \"contactPhone\": \"+1-555-123-4567\",\n  \"contactEmail\": \"john@example.com\",\n  \"paymentMethod\": \"CREDIT_CARD\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/checkout",
							"host": ["{{baseUrl}}"],
							"path": ["api", "checkout"]
						},
						"description": "Checkout cart. Payment methods: CREDIT_CARD, DEBIT_CARD, PAYPAL, BANK_TRANSFER, CASH_ON_DELIVERY. User ID is extracted from JWT token automatically."
					}
				}
			]
		},
		{
			"name": "Orders",
			"item": [
				{
					"name": "Get User Orders",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwtToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/orders",
							"host": ["{{baseUrl}}"],
							"path": ["api", "orders"]
						},
						"description": "Get all orders for current user. User ID is extracted from JWT token automatically."
					}
				},
				{
					"name": "Get Order by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwtToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/orders/{{orderId}}",
							"host": ["{{baseUrl}}"],
